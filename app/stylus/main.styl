.wrap
    float(100%)
    

    
.home-abs
    abs(block,100%,100%,0px,0px)
    v = 100%
    height "calc(%s + 70px)" % v
    background: url(../img/home.jpg) no-repeat;
    bgP(top,center,cover) 
    
    
.inner 
    abs(block,100%,auto,100%,0px)
