header
    abs(block,100%,112px,0px,0px)
    z-index: 999;

    
    .content
        height 100%
        
    .header__floating
        float-w(100%)
        height 100%
        display block
        
    .header__logo
        display block
        float-w(114px)
        height 112px
        bgP(center,center,contain)
        background url(../img/logo.svg)
        
    .header__nav-block
        float right
        margin-right -55px
        height 100%
        
        nav
            float(100%)
            height 100%
            
            ul
                float(100%)
                height 100%
                
                li 
                    float left
                    width auto;
                    height 100%
                    display table
                    
                    a 
                        color #fff
                        font-size 18px
                        margin 0 15px
                        font-family fonttxt
                        display block
                        m-speed(0.3s)
                        
                    a:hover
                        color colfirm
                        
                    .search
                        width 33px
                        height 33px
                        background colfirm
                        border-radius 50%
                        display inline-table
                        
                        i
                            width 12px
                            height 12px
                            bgP(center,center,contain)
                            display block
                            position relative
                            margin 0 auto
                            background url(../img/s-ico.svg)
                            margin-top 10px
                            
                    .search:hover 
                        background #cd1041
                        
                    .button
                        padding 12px 24px
                        border solid 1px #fff
                        border-radius 45px
                        text-transform uppercase
                        font-size 12px;
                        
                    .button:hover
                        background #fff
                        color colfirm
                        border-color ccolfirm