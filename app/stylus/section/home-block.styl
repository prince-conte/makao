.home
    abs(block,100%,100%,0px,0px)
    z-index 100
    
    .content
        height 100%
        
    .home__table
        abs(table,100%,100%,0px,0px)
            
        article
            float-w(100%)
            margin-top 70px
            
            h1
                font-size 266px
                color #fff
                font-family fontB
                text-align left
                float-w(100%)
                
            .home__table_desc
                font-size 24px
                color #fff
                font-family fontM
                float-w(100%)
                display block
                text-transform uppercase
                position relative
                top -50px
                left 16px;
                
            .button-block
                position relative
                top -50px
                